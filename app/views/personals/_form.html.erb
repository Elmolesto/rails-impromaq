<%= simple_form_for(@personal) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs offset-md-1">
  <div class="row">
    <div class="col-md-2 mb-2 ">
      <%= f.input :rut %>
    </div>
    <div class="col-md-1 mb-1 ">
      <%= f.input :dv %>
    </div>
    <div class="col-md-5 mb-5 ">
      <%= f.input :nombre %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mb-4 ">
      <%= f.input :contratado, as: :date, start_year: 1990 %>
    </div>
    <div class="col-md-4 mb-4 ">
      <%= f.input :evaluacion %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mb-8 ">
      <%= f.input :comentarios %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary", label: 'Crear' %>
  </div>
</div>

<% end %>
