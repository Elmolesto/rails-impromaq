
<h1>Equipos entregados</h1>



<table id="myTable" class="table table-striped table-bordered table-sm shadow" cellspacing="0" width="100%">
 <thead>
   <tr>
     <th>Fecha</th>
     <th>Planta</th>
     <th>Nombre</th>
     <th>Tipo</th>
     <th>Responsable</th>
     <th>Antiguedad</th>
     <th>Observaciones</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @entregas.each do |entrega| %>
     <tr>
       <td><%= entrega.fecha %></td>
       <td><%= entrega.planta %></td>
       <td><%= entrega.nombre %></td>
       <td><%= entrega.tipo %></td>
       <td><%= entrega.responsable %></td>
       <td><%= entrega.antiguedad %></td>
       <td><%= entrega.observaciones %></td>



       <td class="text-center">
         <button type="button" class="btn btn-sm btn-secondary command-edit shadow p-1 rounded">
         <%= link_to "", entrega, class: 'fa fa-eye fa-fw text-light'%>
         </button>
         <!-- <button type="button" class="btn btn-sm btn-success command-edit shadow p-1 rounded">
         <%= link_to "", edit_entrega_path(entrega), class: "fa fa-edit fa-fw text-light"%>
         </button>
          <% if current_user.superadmin_role? %>
         <button type="button" class="btn btn-sm btn-danger command-delete shadow p-1 rounded">
           <%= link_to "", entrega, method: :delete, data: { confirm: "Are you sure?" }, class: "fa fa-trash fa-fw text-light" %>
         </button>
         <% end %>  -->


         </td>

     </tr>
   <% end %>
 </tbody>

 <tfoot>
           <tr>
             <th>Fecha</th>
             <th>Planta</th>
             <th>Nombre</th>
             <th>Tipo</th>
             <th>Responsable</th>
             <th>Antiguedad</th>
             <th>Observaciones</th>
             <th colspan="3"></th>


           </tr>
       </tfoot>
</table>

<br>

