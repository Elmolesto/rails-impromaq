

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="form-signin text-center">
  <br>
  <img class="justify-content-center" src="\logo.png" alt="" width="72" height="72">
  <br>
  <h1 class="h3 font-weight-normal"></h1>
  <br>
  <div class="row justify-content-center ">


    <%= f.input :email,
    required: false,
    autofocus: true,
    input_html: { autocomplete: "email" } %>

  </div>
  <div class="row justify-content-center">

    <%= f.input :password,
    required: false,
    input_html: { autocomplete: "current-password" } %>

  </div>

  <%= f.input :remember_me, label: 'Recordar sesiÃ³n', as: :boolean if devise_mapping.rememberable? %>
</div>

<div class="form-actions">
  <div class="row justify-content-center">
    <%= f.button :submit, "Ingresar", class: "btn-primary" %>
  </div>
  <br>
  <% end %>
</div>
<br>
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
